<div id="addPage"
  class="w-full h-full pointer-events-none opacity-0 bg-black/50  fixed top-0 left-0  justify-center items-center px-4 py-10 flex transition-opacity duration-300 ease-in-out"
>
  <div class="max-w-[480px] h-170 w-full bg-white p-8 overflow-y-scroll">
    <div class="flex justify-between items-center border-b-2 border-gray-100 py-6">
      <h1 class="text-2xl font-light">Add New Book</h1>
      <svg class="hover:text-black cursor-pointer text-gray-500 h-5 w-5 duration-200 transition-all ease-in-out"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="currentColor"
        class="size-6"
        id="close-btn"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18 18 6M6 6l12 12"
        />
      </svg>
    </div>

    <div>
        <form action="/add" method="post">
            <div class="flex flex-col mt-6">
                <label for="title" class="mb-2 font-light">TITLE *</label>
                <input id="title" name="title" type="text" class="p-3 border-2 border-gray-100">
            </div>
            <div class="flex flex-col mt-6">
                <label for="author" class="mb-2 font-light">AUTHOR *</label>
                <input id="author" name="author" type="text" class="p-3 border-2 border-gray-100">
            </div>
            <div class="flex flex-col mt-6">
                <label for="rate" class="mb-2 font-light">RATINGS *</label>
                <select name="rate" id="rate" class="p-2 border-2 border-gray-100 focus-within:border-black">
                    <option value="5">5 Stars</option>
                    <option value="4">4 Stars</option>
                    <option value="3">3 Stars</option>
                    <option value="2">2 Stars</option>
                    <option value="1">1 Star</option>
                </select>
            </div>
            <div class="flex flex-col mt-6">
                <label for="date" class="mb-2 font-light">DATE READ *</label>
                <input type="date" name="date" id="date" class="p-3 border-2 border-gray-100">
            </div>

            <div class="flex flex-col mt-6">
                <label for="title" class="mb-2 font-light">NOTES *</label>
                <textarea name="notes" id="notes" class="border-2 border-gray-100 p-2" placeholder="Key takeways or insights" rows="3"></textarea>
            </div>

            <div class="mt-6">
                <button class="bg-black text-white p-2 w-full cursor-pointer hover:bg-black/80 transition-all duration-300 ease-in-out" type="submit">
                    Save Book
                </button>
            </div>

        </form>
    </div>

  </div>
</div>
