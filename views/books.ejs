<div class="grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 px-1 py-10 max-w-[1240px] mx-auto ">
    <% for(let i =0; i < usersData.length; i++) { %>
  <div class="border-2 border-gray-100 shadow-md p-6 transition-all duration-300">
    <div class="flex gap-10 mb-4">
      <div class="h-30 w-30">
        <img
          src="<%= usersData[i].book_cover %>"
          alt="random"
          class="h-full w-full object-cover"
        />
      </div>

      <div>
        <h1 class="text-2xl"><%= usersData[i].title %></h1>
        <p class="text-md font-light mb-4 text-gray-500">by <%= usersData[i].author %></p>
        <div>
            <% for(let j = 0; j < usersData[i].rating; j++) { %>
            <span class="h-1">â˜…</span>
            <% } %>
        </div>
      </div>
    </div>

    <div class="flex justify-between text-sm gap-4 text-gray-500 py-3">
      <h3 class="font-light">READ <%= new Date(usersData[i].date_read).toDateString() %></h3>
      <p class="font-light"> <%= usersData[i].rating %>/5</p>
    </div>

    <div class="border-l-2 border-gray-200 p-2 italic text-sm text-gray-500">
      <%= usersData[i].description %>
    </div>

    <div class="flex justify-end py-3 gap-4">
      <button  
        class="edit-btn border-2 border-gray-100 p-2 hover:bg-black hover:text-white transition-all duration-300 ease-in-out cursor-pointer text-gray-500"
        onclick="window.location.href='/edit/<%= usersData[i].id %>'"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="size-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
          />
        </svg>
      </button>
      <form action="/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?');">
        <input type="hidden" name="id" value="<%= usersData[i].id %>">
      <button id="delete-btn"
        class="border-2 border-gray-100 p-2 hover:bg-black hover:text-white transition-all duration-300 ease-in-out cursor-pointer text-gray-500"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          class="size-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"
          />
        </svg>
      </button>
      </form>
    </div>
  </div>
 <% } %>



</div>
